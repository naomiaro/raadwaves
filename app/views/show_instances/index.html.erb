<h1>Listing show_instances</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_instances.each do |show_instance| %>
      <tr>
        <td><%= link_to 'Show', show_instance %></td>
        <td><%= link_to 'Edit', edit_show_instance_path(show_instance) %></td>
        <td><%= link_to 'Destroy', show_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show instance', new_show_instance_path %>
